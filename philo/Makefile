NAME = philo

CC = cc
CFLAGS = -Wall -Wextra -Werror

SRC = main.c \
	  struct.c \
	  check.c \
	  ft_atol.c \
	  init.c \
	  routine.c \
	  thread.c \
	  error.c

OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c philo.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
